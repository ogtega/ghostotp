<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/keyline_2">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/activity_default_margin"
      android:background="?attr/selectableItemBackground">

      <TextView
        android:id="@+id/account_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.1"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <TextView
        android:id="@+id/account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_code" />

      <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_refresh"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_refresh_24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:visibility="@{timeBase ? View.GONE : View.VISIBLE}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

      <de.tolunla.countdownview.CountdownView
        android:id="@+id/countdown_indicator"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:visibility="@{timeBase ? View.VISIBLE : View.GONE}"
        app:color="@color/color_on_surface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </com.google.android.material.card.MaterialCardView>

  <data>
    <import type="android.view.View" />
    <variable
      name="timeBase"
      type="Boolean" />
  </data>
</layout>